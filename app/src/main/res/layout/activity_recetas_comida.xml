<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- BotÃ³n para publicar nueva receta -->
    <Button
        android:id="@+id/btnNuevaReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publicar nueva receta"
        android:layout_marginBottom="16dp" />

    <!-- Barra de progreso mientras se cargan las recetas -->
    <ProgressBar
        android:id="@+id/progressBarRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <!-- RecyclerView para mostrar las recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecetas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

