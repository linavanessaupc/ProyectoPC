<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnlaceInvitacionActivity">

    <TextView
        android:id="@+id/tvTituloEnlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Enlace de Invitación"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnGenerarEnlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Enlace"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloEnlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etEnlaceGenerado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enlace generado aquí"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/rounded_corners"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btnGenerarEnlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/btnCompartirEnlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir Enlace"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etEnlaceGenerado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
