<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modelo.RegistrarMascota">

    <EditText
        android:id="@+id/etNombreMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Mascota"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/etRazaMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza de la Mascota"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etNombreMascota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/etPesoMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso de la Mascota (kg)"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etRazaMascota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/etEdadMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad de la Mascota (aÃ±os)"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPesoMascota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnGuardarMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Mascota"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etEdadMascota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
